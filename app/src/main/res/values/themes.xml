<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/green_700</item>
        <item name="colorError">@color/red_700</item>
        <item name="colorSurface">@color/gray_100</item>
        <item name="colorOnSurface">@color/gray_800</item>
        <item name="snackbarTextViewStyle">@style/Widget.App.Snackbar</item>

        <item name="android:fontFamily">@font/merriweather</item>
        <item name="fontFamily">@font/merriweather</item>

        <item name="colorControlActivated">@color/green_700</item>
        <item name="colorControlNormal">@color/gray_700</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="toolbarStyle">@style/Todo.Toolbar</item>
        <item name="android:listDivider">@color/gray_700</item>
        <item name="textInputStyle">@style/AddEdit.TitleTextStyle</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App.Body1</item>
    </style>

    <style name="Widget.App.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gray_800</item>
        <item name="android:backgroundTint">@color/gray_800</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/merriweather</item>
        <item name="android:fontFamily">@font/merriweather</item>
    </style>

    <style name="Todo.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/gray_700</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/merriweather_bold_italic</item>
        <item name="fontFamily">@font/merriweather_bold_italic</item>
    </style>

    <style name="AddEdit.TitleTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/title_color_selector</item>
        <item name="android:textColorHint">@color/gray_300</item>
        <item name="hintTextColor">@color/green_700</item>
        <item name="colorControlActivated">@color/green_700</item>
    </style>
</resources>